import string
from random import choice, shuffle, randint

lowercase = choice(string.ascii_lowercase)
uppercase = choice(string.ascii_uppercase)
digit = choice(string.digits)
punctuation = choice(string.punctuation)

remaining_length = randint(4, 10)  
all_characters = string.ascii_letters + string.digits + string.punctuation
others = [choice(all_characters) for _ in range(remaining_length)]


password_list = [lowercase, uppercase, digit, punctuation] + others
shuffle(password_list)
password = "".join(password_list)

print("Your password:", password)
